@model CreateSeriesInputModel

@{
    this.ViewData["Title"] = "Add series";
    var genres = this.Model.RetrievedGenres.Select(x => new SelectListItem(x.Value, x.Key));
    var ongoingStatuses = new SelectListItem[]
    {
        new SelectListItem("Ongoing", "true"),
        new SelectListItem("Completed", "false"),
            };

}

@section Scripts
{
    <script src="@Url.Content("~/js/multi-select.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/seriesCreate.js")" type="text/javascript"></script>
}

@section Styles
{
    <link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="panel panel-default">
        <div id="dvTab">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-upload">
                    <a href="#tab1" aria-controls="tab1" role="tab" data-toggle="tab" class="btn btn-primary uploadSelect">
                        Link Image
                    </a>
                </li>
                <li>
                    <a href="#tab2" aria-controls="tab2" role="tab" data-toggle="tab" class="btn btn-primary uploadSelect">
                        Upload Image
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active form-group" id="tab1">
                    <label asp-for="CoverPath">Cover Path</label>
                    <input asp-for="CoverPath" class="form-control" />
                    <span asp-validation-for="CoverPath" class="text-danger"></span>
                </div>
                <div role="tabpanel" class="tab-pane form-group" id="tab2">
                    <label asp-for="CoverImage" class="control-label">Cover Image</label>
                    <div class="custom-file">
                        <input asp-for="CoverImage" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                    <span asp-validation-for="CoverImage" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Ongoing"></label>
        <select asp-for="Ongoing" class="form-control" asp-items="ongoingStatuses"></select>
        <span asp-validation-for="Ongoing" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genres"></label>
        <select id="genreValues" asp-for="Genres" class="form-control" asp-items="genres"></select>
        <span asp-validation-for="Genres" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>