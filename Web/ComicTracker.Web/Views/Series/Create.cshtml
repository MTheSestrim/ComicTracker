@model CreateSeriesInputModel
@{
    this.ViewData["Title"] = "Add series";
    var genres = this.Model.RetrievedGenres.Select(x => new SelectListItem(x.Value, x.Key));
    var ongoingStatuses = new SelectListItem[]
    {
        new SelectListItem("Ongoing", "true"),
        new SelectListItem("Completed", "false"),
                    };

}
@section Scripts
{
    <script src="@Url.Content("~/js/genreSelect.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/multi-select.js")" type="text/javascript"></script>
}

<h1>@this.ViewData["Title"]</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CoverPath"></label>
        <input asp-for="CoverPath" class="form-control" />
        <span asp-validation-for="CoverPath" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ongoing"></label>
        <select asp-for="Ongoing" class="form-control" asp-items="ongoingStatuses"></select>
        <span asp-validation-for="Ongoing" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genres"></label>
        <select id="genreValues" asp-for="Genres" class="form-control" asp-items="genres"></select>
        <span asp-validation-for="Genres" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>